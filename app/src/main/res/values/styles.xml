<resources>


    <style name="holo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/Menu_style</item>
    </style>
    
    <style name="Menu_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayoutLabelGrey" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#666</item>
        <item name="android:textColor">#000</item>
        <item name="colorAccent">#666</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">@color/orange_grey</item>
    </style>


</resources>
