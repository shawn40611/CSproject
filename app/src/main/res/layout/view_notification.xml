<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/transparent">
    <RelativeLayout
        android:id="@+id/notification_content"
        android:layout_width="@dimen/dp_303" android:layout_height="@dimen/dp_288"
        android:background="@drawable/content" android:backgroundTint="@color/spinner_background"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/black"
        android:text="dinner"/>
    <TextView
        android:id="@+id/tv_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_event_name"
        android:layout_alignLeft="@id/tv_event_name"
        android:layout_marginTop="@dimen/dp_15"
        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/black"
        android:text="groups"/>
    <TextView
        android:id="@+id/tv_inviter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_groups"
        android:layout_toRightOf="@id/tv_groups"
        android:layout_marginLeft="@dimen/dp_10"
        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"
        android:text="inviter"/>

    <TextView
        android:id="@+id/tv_events_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_groups"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@id/tv_groups"
        android:textColor="@color/content_time_grey"
        android:textSize="@dimen/dp_16"
        android:maxLines="2"
        android:fontFamily="@font/montserrat" />
    <TextView
        android:id="@+id/tv_events_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_events_time"
        android:layout_alignLeft="@id/tv_events_time"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="5"
        android:paddingRight="@dimen/dp_38"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_reply_confirm"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/icon_check"/>
    <Button
        android:id="@+id/btn_reply_refuse"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignBottom="@id/btn_reply_confirm"
        android:layout_toLeftOf="@id/btn_reply_confirm"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/icon_refuse"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/transparent"
        android:layout_below="@id/notification_content"/>


</RelativeLayout>
